<style>
    @media screen and (max-width: 780px) {
        footer {
            display: none;
        }
    }

    footer {
        display: block;
    }

    .active {
        background: linear-gradient(90deg, rgba(174, 247, 247, 1) 8%, rgba(204, 240, 255, 1) 45%, rgba(88, 206, 255, 1) 100%);
        border-radius: 8px;

        & svg {
            color: #000;
        }
    }

    section {
        transition: .3s all;
    }
