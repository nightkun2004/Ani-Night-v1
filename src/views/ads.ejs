
<style>
    .container_ads_home {
        width: 100%;
        margin: 0 auto;
        height: 150px;
        background-color: rgba(255, 255, 255, .55);
        position: fixed;
        bottom: 0;
        left: 0;
        z-index: 22;
    }

    .ads_center {
        position: relative;
    }

    .ads_ads {
        background-color: #ccc;
        max-width: 900px;
        width: 100%;
        height: 100%;
        margin: 0 auto;
        overflow: hidden;
    }

    .close {
        position: absolute;
        top: -29%;
        right: 0;
        background-color: #f3f3f3;
        padding: 10px 7px;
        cursor: pointer;
    }
</style>
<body>
    <div class="container_ads_home">
        <div class="ads_ads">
            <div class="ads_center">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6579807593228261"
                    crossorigin="anonymous"></script>
                <!-- ads_home -->
                <ins class="adsbygoogle" style="display:inline-block;width:900px;height:150px"
                    data-ad-client="ca-pub-6579807593228261" data-ad-slot="7305022131"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
            <span class="close">X</span>
        </div>
    </div>


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const closeBtn = document.querySelector(".close");
            const adsContainer = document.querySelector(".container_ads_home");

            closeBtn.addEventListener('click', () => {
                adsContainer.style.display = 'none';
            });
        });

    </script>