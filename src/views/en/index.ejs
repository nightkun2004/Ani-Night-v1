           <section class="mx-auto px-4 xl:max-w-7xl">
            <div class="mb-5 mt-5 bg-white p-4 rounded shadow-md">
                <div class="flex justify-between">
                    <h2 class="text-2xl font-bold mb-5">Trending</h2>

                    <a href="/trending" class="font-bold text-md text-blue-600">All</a>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
                    <% topViewedArticles.forEach(top => { %>
                      <% if (top.published) {%> 
                        <div class="bg-white shadow-md rounded-lg overflow-hidden transform transition-transform duration-300 card">
                            <div class="relative">
                                <img class="w-full h-48 object-cover" src="/acticles_images/<%= top.photo %>" alt="<%= top.title %>">
                                <p class="italic absolute bottom-0 right-0 text-right text-7xl font-bold text-yellow-400 mr-4"><%= formatNumber(top.views) %><span class="text-sm text-white font-medium">Views</span></p>
                                
                            </div>
                            <div class="p-5">
                                <h3 class="text-lg font-semibold mb-2"><%= top.title %></h3>
                                <p class="text-gray-600 text-sm mb-4"><%- top.content.substring(0, 100) %>...</p>
                                <a href="/read/<%= top.url %>?id=<%= top._id %>&lang=<%= language %>" class="text-blue-500 hover:underline">More</a>
                            </div>
                        </div>
                      <% } %>
                    <% }); %>
                </div>
            </div>

            <div class="mb-5 mt-5 bg-white p-4 rounded shadow-md">
                <h2 class="text-2xl font-bold mb-5">Newly updated articles</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        
                    <% updatedArticles.forEach(updated => { %>
                      <% if (updated.published) {%> 
                        <div class="bg-white shadow-md rounded-lg overflow-hidden transform transition-transform duration-300 card">
                            <img class="w-full h-48 object-cover" src="/acticles_images/<%= updated.photo %>" alt="<%= updated.title %>">
                            <div class="p-5">
                                <h3 class="text-lg font-semibold mb-2"><%= updated.title %></h3>
                                <p class="text-gray-600 text-sm mb-4"><%- updated.content.substring(0, 100) %>...</p>
                                <a href="/read/<%= updated.url %>?id=<%= updated._id %>&lang=<%= language %>" class="text-blue-500 hover:underline">more</a>
                            </div>
                        </div>
                      <% } %>
                    <% }); %>
                   
                    <!-- https://via.placeholder.com/500x300 -->
                    
                </div>
            </div>

            <div class="mb-5 mt-5 bg-white p-4 rounded shadow-md">
                <h2 class="text-2xl font-bold mb-5">Recommended for you</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        
                    <% acticlefotYou.forEach(updated => { %>
                      <% if (updated.published) {%> 
                        <div class="bg-white shadow-md rounded-lg overflow-hidden transform transition-transform duration-300 card">
                            <img class="w-full h-48 object-cover" src="/acticles_images/<%= updated.photo %>" alt="<%= updated.title %>">
                            <div class="p-5">
                                <h3 class="text-lg font-semibold mb-2"><%= updated.title %></h3>
                                <p class="text-gray-600 text-sm mb-4"><%- updated.content.substring(0, 100) %>...</p>
                                <a href="/read/<%= updated.url %>?id=<%= updated._id %>&lang=<%= language %>" class="text-blue-500 hover:underline">More</a>
                            </div>
                        </div>
                      <% } %>
                    <% }); %>
                </div>
            </div>

