                                                        <img src="/profiles/<%= acticle.author.id.profile %>"
                                                            alt="Profile Picture" class="profile-picture">
                                                        <a href="/editor/<%= acticle.author.id.name %>">
                                                            <span class="username">
                                                                <%= acticle.author.id.username %>
                                                            </span></a>
                                                    </div>
                                                    <% } else { %>
                                                        <p>Author: Unknown</p>
