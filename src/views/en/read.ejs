                                                                oneMinuteAgo=new Date(commentDate.getTime() - 1 * 60 *
                                                                1000); const
                                                                formattedDate=oneMinuteAgo.toLocaleDateString('th-TH');
                                                                %>
                                                                <div class="comment-text">
                                                                    <%= comment.content %>
                                                                    Posted on: <%= formattedDate %>
                                                                </div>
                                            </div>
                                            <% }); %>
