                <p><a href="/read/<%= acticle.url %>">Read</a></p> >
                <p><a href="javascript:void(0)">
                        <%= acticle.title.substring(0, 20) + '...' %>
                    </a></p>
            </div>

            <div class="card_info">
                <div class="article_pic">
                    <img src="/acticles_images/<%= acticle.photo %>" alt="article_pic">
                </div>
                <div class="info-text">
                    <h2> <%- acticle.title %>.</h2>
                    <div class="views">
                        <% function formatNumber(number) { if (number>=
                            1000000)
                            {
                            return (number / 1000000).toFixed(1) + 'm';
                            } else if (number >= 1000) {
                            return (number / 1000).toFixed(1) + 'k';
                            } else {
                            return number;
                            }
                            }

                            var number1 = 100;
                            var number2 = 500;
                            var number3 = 1500;
                            var number4 = 1200000;
                            %>
                            <p class="pl-3">
                                <%= formatNumber(acticle.views) %> Views
                            </p>
                    </div>
                    <div class="data-time">
                        <p class="pl-3 text-slate-500">Posted on
                            <%= new Date(acticle.createdAt).toLocaleDateString('en-EN') %>
                        </p>
                    </div>
                </div>
