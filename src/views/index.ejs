<body>
    <div class="fixed inset-x-0 z-20" id="navbar">
        <%- include('./navbar') %>
    </div>
    <section class="home" id="home">

        <div class="swiper home-slider">

            <div class="swiper-wrapper">

                <% topViewedArticles.forEach((article, index)=> { %>
                <div class="swiper-slide"
                    style="background-image: url('/acticles_images/<%= article.photo %>')">
                    <div class="box">
                        <div class="content">
                            <h3><%= article.title %></h3>
                            <p><%- article.title.substring(0, 20) + '...' %></p>
                                <div class="info-article">
                                    <p><%= article.views %> ครั้ง</p>
                                    <p><%= new Date(article.createdAt).toLocaleDateString('en-EN') %></p>
                                </div>
                            <a href="/read/<%= article.url %>?lang=<%= language %>" class="btn">อ่าน</a>
                        </div>
                    </div>
                </div>
                <% }) %>

            </div>

            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>

            <!-- Add Arrows -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>

        </div>

    </section>

    <section class="manga mx-auto px-4 xl:max-w-7xl" id="manga">
        <div class="manga_header">
            <h2 class="text-3xl mb-6 border-l-4 border-sky-600 px-5 text-gray-600">บทความมาใหม่</h2>
        </div>
        <div class="mangas_update bg-white px-6 md:px-12 py-8 md:py-12 mt-8 shadow-sm relative">
            <% acticles_Bors.forEach((article) => { %>
            <div class="manga_update">
                <div class="manga_pic">
                    <img src="/acticles_images/<%= article.photo %>"
                        alt="https://ani-night.online/acticles_images/<%= article.photo %>">
                </div>
                <div class="manga_text">
                    <h3><%= article.title %></h3>
                </div>
                <% if (article.author && article.author.id) { %>
                    <div class="ch">
                        <div class="profile-logo">
                            <a href="/editor/<%= article.author.id.username %>">
                                <img src="/profiles/<%= article.author.id.profile %>" alt="">
                            </a>
                        </div>
                        <a href="/editor/<%= article.author.id.username %>">
                            <h2><%= article.author.id.username %></h2>
                        </a>
                    </div>
                    <% } else { %>
                        <p>Author: ไม่พบผู้เขียน</p> 
                    <% } %>  
                <div class="btn-read">
                    <a href="/read/<%= article.url %>?lang=<%= language %>">อ่าน</a>
                </div>
            </div>
            <% }) %>

        </div>

        <div class="patgs">
            <h2>เลือกหน้าต่อไป</h2>
            <div class="pagination">
                <% if (prevPage) { %>
                <a href="/?page=<%= prevPage %>"
                    class="bg-blue-500 text-white rounded p-2 mx-1 hover:bg-blue-600 transition duration-300"
                    ><span class="material-symbols-outlined">
                        keyboard_double_arrow_left
                    </span></a>
                <% } %>
                <% for (let i = 1; i <= lastPage; i++) { %>
                    <a 
                    class="bg-blue-500 text-white rounded p-2 mx-1 hover:bg-blue-600 transition duration-300"
                    href="/?page=<%= i %>"><%= i %></a>
                <% } %>

                <% if (nextPage) { %>
                    <a href="/?page=<%= nextPage %>"
                        class="bg-blue-500 text-white rounded p-2 mx-1 hover:bg-blue-600 transition duration-300"><span class="material-symbols-outlined">
                        double_arrow
                    </span></a>
                <% } %>
            </div>
        </div>
    </section>

    <footer>
        <div class="footer">
            <div class="logo">
                <a href="/">
                    <img src="/images/logo/logo.png" alt="logo">
                    <p>Ani Night</p>
                </a>
            </div>

            <div class="copy">
                copyright © 2024 Manga Logo
                <p>Ver Update 1.2.0</p>
            </div>
        </div>
    </footer>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script>
        var swiper = new Swiper('.home-slider', {
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
        });

        window.addEventListener('scroll', function () {
            var navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('navbar-white-bg');
            } else {
                navbar.classList.remove('navbar-white-bg');
            }
        });

    </script>
</body>

