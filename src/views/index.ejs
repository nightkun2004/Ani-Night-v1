            <div class="loading" style="display: none;">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Blog Post 1 -->
                    <% acticles_Bors.forEach((article)=> { %>
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                        <a href="/read/<%= article.url %>?lang=<%= language %>">
                            <img class="w-full h-48 object-cover" src="/acticles_images/<%= article.photo %>" alt="Post Image">
                            <div class="p-6">
                                <h2 class="text-2xl font-bold mb-2 text-gray-800">  <%= article.title %></h2>
                                <% if (article.author && article.author.id) { %>
                                <div class="flex items-center">
                                    <img class="w-10 h-10 rounded-full mr-4" src="/profiles/<%= article.author.id.profile %>"
                                        alt="Author Image">
                                    <div class="text-sm">
                                        <p class="text-gray-900 leading-none"><a href="/editor/<%= article.author.id.username %>"><%= article.author.id.username %></a></p>
                                        <p class="text-gray-600"><%= moment(article.createdAt).format('YYYY-MM-DD HH:mm:ss') %></p>
                                    </div>
                                </div>
                                <% } else { %>
                                    <p>Author: ไม่พบผู้เขียน</p>
                            <% } %>
                            </div>
                        </a>
                    </div>
                    <% }) %>
                    <!-- More blog posts can be added here in the same format -->
                </div>
            </div>

            <!-- Video News Updates -->
            <div class="herder__news--update__videos flex justify-between mt-2 mb-2">
                <h2 class="text-2xl font-bold">ข่าวอัตเดตอนิเมะ</h2>
                <a class="bg-gray-100 p-2 rounded-full" href="/foryou" target="_blank"
                    rel="noopener noreferrer">ทั้งหมด</a>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Blog Post 1 -->
                <% if (videos.length> 0) { %>
                    <% videos.forEach(video=> { %>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <a href="/play/<%= video.videoid %>">
                        <img class="w-full h-48 object-cover" src="/cover_videos/<%= video.coverImage %>" alt="Video Image">
                        <div class="p-6">
                            <h2 class="text-2xl font-bold mb-2 text-gray-800">  <%= video.name %></h2>
                            <p><%- video.views %> วิว</p>
                            <% if (video.author && video.author.id) { %>
                            <div class="flex items-center">
                                <img class="w-10 h-10 rounded-full mr-4" src="/profiles/<%= video.author.id.profile %>"
                                    alt="Author Image">
                                <div class="text-sm">
                                    <p class="text-gray-900 leading-none"><a href="/editor/<%= video.author.id.username %>"><%= video.author.id.username %></a></p>
                                    <p class="text-gray-600"><%= moment(video.createdAt).format('YYYY-MM-DD HH:mm:ss') %></p>
                                </div>
                            </div>
                            <% } else { %>
                                <p>Author: ไม่พบผู้เขียน</p>
                        <% } %>
                        </div>
                    </a>
                </div>
                <% }) %>
                <% } else { %>
                 <p>ไม่พบข่าวอนิเมะ</p>
                <% } %>
                <!-- More blog posts can be added here in the same format -->
            </div>
        </div>

