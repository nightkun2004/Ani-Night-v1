<body>
    <div class="fixed inset-x-0 z-20" id="navbar">
        <%- include('../navbar') %>
    </div>
    <section class="playsec mx-auto xl:max-w-7xl pt-[110px]">
        <div class="container-play">
            <section class="section-player">
                <div class="container">
                    <div class="video_player">
                        <video preload="metadata" class="main-video">
                            <source
                                src="/videos/konosuba-ss3-pv.mp4"
                                size="720" type="video/mp4">
                                <track default label="ซับไทย" kind="subtitles" src="./mosawoth.vtt" srclang="th">
                                <track label="ซับอังกฤษ" kind="subtitles" src="./musien.vtt" srclang="en">
