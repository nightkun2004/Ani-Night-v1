<script>
    $(document).ready(function() {
        let currentIndex = 0;

        function showSlide(index) {
            const slideWidth = $('.slider-wrapper').width();
            const newTransform = -slideWidth * index;
            $('.slider').css('transform', `translateX(${newTransform}px)`);
        }

        $('#next').click(function() {
            const totalSlides = $('.slide').length;
            currentIndex = (currentIndex + 1) % totalSlides;
            showSlide(currentIndex);
        });

        $('#prev').click(function() {
            const totalSlides = $('.slide').length;
            currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
            showSlide(currentIndex);
        });

        // Recalculate slide width on window resize
        $(window).resize(function() {
            showSlide(currentIndex);
        });
    });
</script>
<script>
$(document).ready(function() {
    let currentIndex = 0;
    const slides = $('.hero-bg');
    const dots = $('.dot');
    const interval = 5000;
    let countdownTimer;

    function showSlide(index) {
        slides.removeClass('active').addClass('inactive');
        slides.eq(index).removeClass('inactive').addClass('active');
        dots.removeClass('dot-active').addClass('dot-inactive');
        dots.eq(index).removeClass('dot-inactive').addClass('dot-active');

        $('.countdown-bar').css('width', '0').removeClass('animating');
        setTimeout(() => {
            slides.eq(index).find('.countdown-bar').addClass('animating');
        }, 0);
    }

    function nextSlide() {
        currentIndex = (currentIndex + 1) % slides.length;
        showSlide(currentIndex);
    }

    dots.click(function() {
        clearInterval(countdownTimer);
        currentIndex = $(this).index();
        showSlide(currentIndex);
        countdownTimer = setInterval(nextSlide, interval);
    });

    countdownTimer = setInterval(nextSlide, interval);
});

</script>
