<body>
    <div class="fixed inset-x-0 z-20 md:none" id="navbar">
        <%- include('../../admin/sidebars/navbar') %>
    </div>
    <section class="mx-auto px-4 xl:max-w-7xl pt-[110px]">
        <div class="loading" style="display: none;">
            <div class="anime_lists sub" >
               
                    <% if (AnimeBordData && AnimeBordData.length > 0) { %>
                        <% AnimeBordData.forEach(item => { %>
                            <% if (item.animeApril && item.animeApril.length > 0) { %>
                                <% item.animeApril.forEach(anime => { %>
                                    <div class="anime_list">
                                        <div class="anime_item_pic">
                                            <img src="<%= anime.linkImage %>" alt="Anime">
                                        </div>
                                        <div class="anime_info_text">
                                            <h2><%= anime.nameAnime %></h2>
                                            <p>ผลิตโดย: <span><%= anime.Produced %></span></p>
                                            <% if (anime.manuscript) { %>
                                                <p>ต้นฉบับ: <span><%= anime.manuscript %></span></p>
                                            <% } %>
                                            <p>จำนวนตอน: <span><%= anime.episodes %></span> ตอน</p>
                                            <p>เริ่มฉาย(ญี่ปุ่น): <span><%= anime.start %></span></p>
                                            <% if (anime.info) { %>
                                                <button>
                                                    <a href="#">ข้อมูลเพิ่มเติม</a>
                                                </button>
                                            <% } %>
                                            <form action="/edit_animeboard" method="POST">
                                            <input type="hidden" name="edit_id" value="<%= anime._id %>"> 
                                            <button type="submit" name="edit_button" class="btn-deitarticle rounded-lg bg-green-500 w-full mb-[20px] p-2">แก้ไข</button>
                                        </form>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <p style="text-align: center;">ไม่มีข้อมูล AnimeApril สำหรับ AnimeBord นี้</p>
                            <% } %>
                        <% }); %>
                    <% } else { %>
                        <p style="text-align: center;">ไม่มีข้อมูล AnimeBord</p>
                    <% } %>
                
                
                
